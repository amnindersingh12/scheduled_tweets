<%= form_with model: [tweet, @comment], method: :post, local: false do |form| %>
  <p class="pt-3">Replying to <%= link_to tweet.user.first_name, profile_path(tweet.user), class: "text-sky-500 hover:text-sky-600" %></p>
  <div class="flex items-start justify-between space-x-3 py-6 border-b" >
    <%= profile_image(current_user) %>
    <div class="flex-1">
      <%= form.text_area :body, required: "required", class: "px-6 w-full resize-none rounded-md focus:shadow-none focus:border-none ring-0 focus:ring-0 focus:outline-none text-lg py-3 h-full min-h-[100px]", placeholder: "Tweet your reply" %>
      <%= form.file_field :image, id:"image_f", required: "required", class: "block mb-5 w-full text-xs text-gray-900 bg-gray-50 rounded-lg border border-gray-300 cursor-pointer dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>
    </div>
    <%= form.submit "Reply", class: "px-6 py-2 bg-sky-400 text-white font-semibold rounded-full text-center cursor-pointer inline-block hover:bg-sky-500 transition ease-in-out duration-300" %>
  </div>
<% end %>
<div id="comment_form">
</div>
