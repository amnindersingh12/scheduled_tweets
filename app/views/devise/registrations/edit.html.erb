<%= render layout: "auth_layout", locals: { title: "Edit account" } do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mb-6 mt-6">
      <%= f.label :profile_image %>
      <%= f.file_field :profile_image, class: "block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:border-0 file:text-sm file:font-semibold file:bg-sky-50 file:text-sky-700 hover:file:bg-sky-100 file:rounded-full" %>
    </div>
    <div class="mb-6">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, placeholder: "hello kiprosh", class: "form-control" %>
    </div>
    <div class="mb-6">
      <%= f.label :username %>
      <%= f.text_field :username, placeholder: "hellokiprosh", class: "form-control" %>
    </div>
    <div class="mb-6 mt-6">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="mb-6 mt-6">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
    <div class="mb-6 mt-6">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>
    <div class="mb-6 mt-6">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    </div>
    <div class="actions">
      <%= f.submit "Update", class: "mb-6 px-6 py-2 bg-sky-400 text-white font-semibold rounded-full text-center cursor-pointer inline-block hover:bg-sky-500 transition ease-in-out duration-300" %>
    </div>
  <% end %>
  <h3>Cancel my account</h3>
  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), method: :delete, class: "mb-6 bg-gray-500 text-white p-2 rounded text-sm w-auto" %></p>
  <%= link_to "Back", :back, class: " bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded-r" %>
<% end %>
