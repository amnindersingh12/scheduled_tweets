<div class="items-start justify-center block h-full grid-cols-1 gap-4 lg:grid lg:items-center lg:grid-cols-2  ">
  <img src="https://abs.twimg.com/sticky/illustrations/lohp_en_1302x955.png">
  <div class="relative z-20 px-6 mx-auto lg:px-12 max-w-lg">
    <div class="mb-4 xl:mt-8">
      <div class="mt-6 mb-4 lg:mt-0">
        <%= link_to "Back", root_path, class: "text-gray-600 underline flex items-center hover:text-gray-700 hover:no-underline" %>
      </div>
      <h2 class="pt-6 font-sans text-3xl font-black leading-tight mb-3"> Sign Up </h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),data: { turbo: false } ) do |form| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%#debugger%>
        <div class="mb-6 mt-6">
          <%= form.label :profile_image %>
          <% form.hidden_field :profile_image, value: form.object.profile_image.signed_id if form.object.profile_image.attached?%>
          <%= form.file_field :profile_image, class: "block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:border-0 file:text-sm file:font-semibold file:bg-sky-50 file:text-sky-700 hover:file:bg-sky-100 file:rounded-full" %>
        </div>
        <div class="mb-6">
          <%= form.label :first_name %>
          <%= form.text_field :first_name,placeholder: "hello kiprosh",  class: "form-control" %>
        </div>
        <div class="mb-6">
          <%= form.label :username %>
          <%= form.text_field :username, placeholder: "hellokiprosh", class: "form-control" %>
        </div>
        <div class="mb-6">
          <%= form.label :email%>
          <%= form.email_field :email, autocomplete: "email", placeholder: "hello@kiprosh.com", class: "form-control" %>
        </div>
        <div class="mb-6">
          <%=form.label :password %>
          <%= form.password_field :password, placeholder: "password", class: "form-control" %>
        </div>
        <div class="mb-6">
          <%=form.label :password_confirmation %>
          <%= form.password_field :password_confirmation,placeholder: "password" , class: "form-control"%>
        </div>
        <div class="mb-6">
          <%= form.submit "Sign Up", class: "px-6 py-2 bg-sky-400 text-white font-semibold rounded-full text-center cursor-pointer inline-block hover:bg-sky-500 transition ease-in-out duration-300" %>
        </div>
      <% end %>
      <%# render "devise/shared/links" %>
    </div>
  </div>
</div>
