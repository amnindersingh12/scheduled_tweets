 <%= form_with model: @tweet, method: :post do |form| %>
  <%= form.text_area :body,required:"required", class: " w-full resize-none rounded-md focus:shadow-none focus:border-none ring-0 focus:ring-0 focus:outline-none text-lg py-3 px-0 h-full min-h-[200px] ", placeholder: "What's on your mind?" %>
  <div class="flex justify-end px-6 -mt-20">
    <%= form.submit "Tweet", class: "px-6 py-2 bg-sky-400 text-white font-semibold rounded-full text-center cursor-pointer inline-block hover:bg-sky-500 transition ease-in-out duration-300" %>
  </div>
<% end %>

