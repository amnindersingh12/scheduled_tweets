<div class="px-6 py-3 border-b", id="<%= tweet.id %>_r">
  <div class="flex items-center mb-3 space-x-2", id="<%= tweet.id %>_rr">
    <i class="fa fa-retweet"></i>
    <p class="text-sm font-medium">Retweeted by @<%= link_to  tweet.user.username, profile_path(tweet.user), class: "hover:underline" %></p>

  </div>
  <div class="flex space-x-3 items-start">
    <div class="flex-shrink-0">
    <%# if the tweet is retweeted %>
      <% if tweet.tweet_type == "retweet" %>
        <%= profile_image(tweet.tweet.user) %>
      <% else %>
        <%= profile_image(tweet.user) %>
      <% end %>
    </div>
    <div class="flex-1">
      <p class="font-bold">
      <% if tweet.tweet_type == "retweet" %>

        <%= tweet.tweet.user.first_name %>
        @<%= link_to tweet.tweet.user.username, profile_path(tweet.tweet.user), class: "hover:underline" %>.
      <% else %>
        <%= tweet.user.first_name %>
        @<%= link_to tweet.user.username, profile_path(tweet.user), class: "hover:underline" %>.
      <% end %>

        <%= tweet.created_at.strftime("%b %d") %>
      </p>
      <%= tweet.body %>
      <%= image_tag tweet.image unless tweet.image.blank? %>
      <%= render "tweets/controls", tweet: tweet %>
    </div>
  </div>
</div>
