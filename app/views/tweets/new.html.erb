<h1> Tweet Form </h1>

<%= form_with model: @tweet, url: tweet_new_path, method: :post do |form| %>
  

  
    <div class="mb-3">
        <%=form.label :body %>
        <%= form.text_field :body, placeholder: "What's on your mind?" %>
    </div>

   

    <div class="mb-3">
        <%= form.submit "Tweet", class: "btn btn-primary" %>
    </div>


  
<% end %>


